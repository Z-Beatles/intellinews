<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fintech.intellinews.dao.ArticleCountDao">
    <sql id="Base_Column_Select">
        SELECT
            id,
            article_id,
            like_count,
            dislike_count,
            view_count,
            gmt_create,
            gmt_modified
        FROM oi_article_count
    </sql>

    <select id="selectById" resultType="ArticleCountEntity">
        <include refid="Base_Column_Select"/>
        WHERE id = #{id}
    </select>

    <select id="selectByArticleId" resultType="com.fintech.intellinews.entity.ArticleCountEntity">
        <include refid="Base_Column_Select"/>
        WHERE article_id = #{articleId}
    </select>
</mapper>