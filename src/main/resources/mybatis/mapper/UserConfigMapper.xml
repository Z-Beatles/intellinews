<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fintech.intellinews.dao.UserConfigDao">
    <sql id="Base_Column_Select">
        SELECT
            id,
            user_id,
            channel_config,
            gmt_create,
            gmt_modified
        FROM oi_user_config
    </sql>

    <select id="selectById" resultType="UserConfigEntity">
        <include refid="Base_Column_Select"/>
        WHERE id = ${id}
    </select>

    <select id="getCurrentUserConfig" parameterType="long" resultType="ChannelEntity">
        <include refid="Base_Column_Select"/>
        WHERE userId = #{userId}
    </select>

</mapper>