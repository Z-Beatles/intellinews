<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fintech.intellinews.dao.AdvertiseDao">
    <sql id="Base_Column_Select">
        SELECT
            id,
            title,
            url,
            thumbnail,
            is_active,
            gmt_create,
            gmt_modified
        FROM oi_advertise
    </sql>

    <select id="getById" resultType="AdvertiseEntity">
        <include refid="Base_Column_Select"/>
        WHERE id = #{id}
    </select>

    <select id="list" resultType="AdvertiseEntity">
        <include refid="Base_Column_Select"/>
        <where>
            <if test="id!=null">
                AND id=#{id}
            </if>
            <if test="title!=null">
                AND title=#{title}
            </if>
            <if test="url!=null">
                AND url=#{url}
            </if>
            <if test="isActive!=null">
                AND is_active=#{isActive}
            </if>
        </where>
    </select>
</mapper>