<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fintech.intellinews.dao.SectionCountDao">
    <sql id="Base_Column_Select">
        SELECT
            id,
            section_id,
            view_count,
            share_count,
            collect_count,
            gmt_create,
            gmt_modified
        FROM oi_section_count
    </sql>
    
    <select id="getById" resultType="SectionCountEntity">
        <include refid="Base_Column_Select"/>
        WHERE id = #{id}
    </select>

    <select id="getBySectionId" resultType="com.fintech.intellinews.entity.SectionCountEntity">
        <include refid="Base_Column_Select"/>
        WHERE section_id = #{id}
    </select>

    <select id="mapSectionCountByIds" resultType="SectionCountEntity">
        <include refid="Base_Column_Select"/>
        WHERE id IN
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>
    
    <update id="updateViewCountBySectionId">
        UPDATE oi_section_count
        SET view_count = view_count + 1
        WHERE section_id = #{sectionId}
    </update>
</mapper>