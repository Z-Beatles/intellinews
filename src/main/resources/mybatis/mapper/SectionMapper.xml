<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fintech.intellinews.dao.SectionDao">
    <sql id="Base_Column_Select">
        SELECT
            id,
            logo,
            name,
            create_by,
            update_by,
            view_count,
            share_count,
            collect_count,
            introduction,
            gmt_create,
            gmt_modified
        FROM oi_section
    </sql>

    <select id="getById" resultType="SectionEntity">
        <include refid="Base_Column_Select"/>
        WHERE id = #{id}
    </select>

    <select id="listAll" resultType="com.fintech.intellinews.entity.SectionEntity">
        <include refid="Base_Column_Select"/>
        ORDER BY view_count DESC
    </select>

    <select id="listSectionsByKeyword" resultType="com.fintech.intellinews.entity.SectionEntity">
        <include refid="Base_Column_Select"/>
        WHERE name LIKE CONCAT('%',#{keyword},'%')
    </select>

</mapper>