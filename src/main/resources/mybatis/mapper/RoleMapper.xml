<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fintech.intellinews.dao.RoleDao">

    <select id="listByLoginUserId" resultType="java.lang.String">
        SELECT c.name
        FROM t_user_login a, t_user_role b, t_role c
        WHERE b.login_user_id = a.id
              AND b.role_id = c.id
              AND a.id = #{id};
    </select>
</mapper>